<div id="offers" class="row list-group">
    <% offers.each do |offer| %>
      <div class="item  col-xs-10 col-lg-10">
        <div class="thumbnail">
          <img class="group list-group-image" src="<%=offer.thumbnailLowRes%>" alt="" />
          <div class="caption">
            <h4 class="group inner list-group-item-heading">
              <%=offer.title%></h4>
            <div class="row">
              <div>
                <p class="lead col-xs-10 col-md-10">
                  <%=offer.payout%></p>
              </div>
              <div class="col-xs-10 col-md-10">
                <a class="btn btn-success" target="_blank" href="<%=offer.link%>">View offer</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    <%end %>
</div>

